{
  "compilerOptions": {
    "declaration": false,
    "module": "es2015",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "outDir": "dist/js",
    "removeComments": true,
    "target": "ES2022",
    "lib": ["dom", "ES2022"],
    "types": ["chrome"]
  },
  "include": ["src/js/*.ts"]
}
